# Allow CORS request from Hub to Forum
map $http_origin <%= $project %>_cors_orig {
    default                                     "https://<%= $project %>.<%= $domain %>";
    "~^https:\/\/([^.]+)\.<%= $project %>\.<%= $domain %>" $http_origin;
}

# Allow to pass cookies in CORS from Hub to Forum
map $http_origin <%= $project %>_cors_cred {
    default                                    false;
    "~^https:\/\/([^.]+)\.<%= $project %>\.<%= $domain %>" true;
}
