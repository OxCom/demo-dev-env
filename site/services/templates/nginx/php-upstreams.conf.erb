# List of default PHP-FPM
<% @versions.each do |version| -%>
upstream <%= version %>-fpm {
  server unix:/var/run/php/<%= version %>-fpm.sock;
}
<% end -%>
# List of PHP-FPM pools per project
<% @projects.each do |project, pools| -%>
###### [<%= project %>] ######
<% pools.each do |pool| %>
upstream <%= pool['php'] %>-<%= project %>-<%= pool['name'] %>-fpm {
    server unix:/var/run/php/<%= pool['php'] %>-<%= project %>-<%= pool['name'] %>-fpm.sock;
}
<% end %>
<% end -%>
